{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "g++",
            "args":[
                "-g",
                "-Wall",
                "-Wextra",
                "-Wpedantic",
                "${fileDirname}\\*.cpp",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-static-libstdc++"
            ],
            "options": {
				"cwd": "C:\\MinGW\\bin"
			},
            "group": "build",
            "problemMatcher": []
        }
    ]
}